<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light.Dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/dialog_title_shop"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/black"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:stretchColumns="0"
            android:shrinkColumns="1,2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:maxLines="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:gravity="center_horizontal"
                    android:text="@string/shop_standard"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:gravity="center_horizontal"
                    android:text="@string/shop_ultimate"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_feature_1"
                    android:layout_weight="0.5"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_check"
                    android:tint="@color/colorGreen"
                    android:contentDescription="@string/description_icon"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_check"
                    android:tint="@color/colorGreen"
                    android:contentDescription="@string/description_icon"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/shop_feature_2"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_close"
                    android:tint="@color/colorRed"
                    android:contentDescription="@string/description_icon"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_check"
                    android:tint="@color/colorGreen"
                    android:contentDescription="@string/description_icon"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/shop_feature_3"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_close"
                    android:tint="@color/colorRed"
                    android:contentDescription="@string/description_icon"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_check"
                    android:tint="@color/colorGreen"
                    android:contentDescription="@string/description_icon"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/shop_feature_4"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_close"
                    android:tint="@color/colorRed"
                    android:contentDescription="@string/description_icon"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_check"
                    android:tint="@color/colorGreen"
                    android:contentDescription="@string/description_icon"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/shop_feature_5"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_close"
                    android:tint="@color/colorRed"
                    android:contentDescription="@string/description_icon"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_check"
                    android:tint="@color/colorGreen"
                    android:contentDescription="@string/description_icon"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/shop_feature_6"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_close"
                    android:tint="@color/colorRed"
                    android:contentDescription="@string/description_icon"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_check"
                    android:tint="@color/colorGreen"
                    android:contentDescription="@string/description_icon"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/shop_feature_7"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_close"
                    android:tint="@color/colorRed"
                    android:contentDescription="@string/description_icon"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_check"
                    android:tint="@color/colorGreen"
                    android:contentDescription="@string/description_icon"/>

            </TableRow>

        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/google_play_logo"
                android:contentDescription="@string/description_icon"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:layout_marginBottom="6dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:background="@drawable/button_flat"
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/button_buy"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="@string/dialog_field_get_it"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:layout_below="@id/button_buy"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:background="@drawable/button_outline"
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/button_continue"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:text="@string/dialog_field_continue"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>