<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_category_about">

        <Preference
            android:icon="@mipmap/ic_launcher"
            android:title="@string/pref_about_title"
            android:summary="@string/pref_about_summary"
            android:key="ABOUT_AND_CHANGELOG"/>

        <Preference
            android:title="@string/pref_privacy_policy_title"
            android:key="PRIVACY_POLICY"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_libraries">

        <Preference
            android:title="@string/pref_lib_butterKnife_title"
            android:summary="@string/pref_lib_butterKnife_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/JakeWharton/butterknife"/>
        </Preference>

        <Preference
            android:title="@string/pref_lib_dagger2_title"
            android:summary="@string/pref_lib_dagger2_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/google/dagger"/>
        </Preference>

        <Preference
            android:title="@string/pref_lib_keyboardVE_title"
            android:summary="@string/pref_lib_keyboardVE_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/yshrsmz/KeyboardVisibilityEvent"/>
        </Preference>

        <Preference
            android:title="@string/pref_lib_material_dialogs_title"
            android:summary="@string/pref_lib_material_dialogs_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/afollestad/material-dialogs"/>
        </Preference>

        <Preference
            android:title="@string/pref_lib_room_title"
            android:summary="@string/pref_lib_room_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://developer.android.com/topic/libraries/architecture/room"/>
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>