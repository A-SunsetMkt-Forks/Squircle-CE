<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.lightteam.modpeide.ui.explorer.viewmodel.ExplorerViewModel"/>
        <import type="android.view.View"/>

        <variable name="viewModel" type="com.lightteam.modpeide.ui.explorer.viewmodel.ExplorerViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- region TOOLBAR -->

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
            android:visibility="@{viewModel.hasPermission ? View.VISIBLE : View.GONE}">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/toolbar"
                app:title="@string/label_local_storage"
                app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:padding="6dp"
                    android:id="@+id/action_home"
                    android:src="@drawable/ic_home"
                    android:tint="@android:color/white"
                    android:background="@drawable/ripple_16dp"/>

                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:clipChildren="true"
                    android:background="@null"
                    android:id="@+id/tab_layout"
                    app:tabRippleColor="?attr/colorControlHighlight"
                    app:tabPaddingStart="4dp"
                    app:tabPaddingEnd="0dp"
                    app:tabUnboundedRipple="false"
                    app:tabGravity="start"
                    app:tabMode="scrollable"/>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- endregion TOOLBAR -->

        <!-- region DIRECTORY FRAGMENT -->

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/swipe_refresh"
            android:background="@color/colorBackground">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.fragment.app.FragmentContainerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/nav_host"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    app:navGraph="@navigation/navigation_graph"
                    app:defaultNavHost="true"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="24dp"
                    android:id="@+id/action_create"
                    android:src="@drawable/ic_plus"
                    android:visibility="@{viewModel.hasPermission ? View.VISIBLE : View.INVISIBLE}"/>

            </FrameLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- endregion DIRECTORY FRAGMENT -->

    </LinearLayout>

</layout>