<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".LModActivity"
    app:insetForeground="#4000"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <include layout="@layout/toolbar"/>

        <com.KillerBLS.modpeide.view.SyntaxEditor
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/editor"/>

    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/coordinator_layout">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/close_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="15dp"
            android:src="@drawable/ic_close_white_48dp"
            app:useCompatPadding="true"
            app:fabSize="normal"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="65dp"
            android:src="@drawable/ic_keyboard_arrow_down_white_48dp"
            app:layout_anchor="@id/close_find"
            app:layout_anchorGravity="center"
            app:useCompatPadding="true"
            app:fabSize="normal"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="135dp"
            android:src="@drawable/ic_keyboard_arrow_up_white_48dp"
            app:layout_anchor="@id/next"
            app:layout_anchorGravity="center"
            app:useCompatPadding="true"
            app:fabSize="normal"/>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:layout_gravity="start"
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        app:menu="@menu/drawer"
        app:itemIconTint="@drawable/drawer_item_icon_bg"
        app:itemTextColor="@drawable/drawer_item_background"
        app:headerLayout="@layout/drawer_header" />

</android.support.v4.widget.DrawerLayout>
