<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/dialog_file_text"
        android:padding="4dp"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:gravity="bottom"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@android:id/text1"
        android:hint="@string/dialog_file_hint"
        android:text="@string/dialog_file_hint"
        android:padding="4dp"
        android:textSize="14sp"
        android:ellipsize="end"
        android:inputType="textNoSuggestions|textVisiblePassword"
        android:theme="@style/CustomWidget"
        android:maxLength="50"
        android:maxLines="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/dialog_path_text"
        android:padding="4dp"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:gravity="bottom"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@android:id/text2"
        android:hint="@string/dialog_path_hint"
        android:text="@string/dialog_path_hint"
        android:padding="4dp"
        android:textSize="14sp"
        android:ellipsize="end"
        android:inputType="textNoSuggestions|textVisiblePassword"
        android:theme="@style/CustomWidget"
        android:maxLength="100"
        android:maxLines="1"/>

</LinearLayout>