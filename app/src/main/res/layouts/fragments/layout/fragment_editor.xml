<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.lightteam.modpeide.ui.editor.viewmodel.EditorViewModel"/>
        <import type="android.view.View"/>

        <variable name="viewModel" type="EditorViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- region TOOLBAR -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="?colorSurface"
            android:elevation="4dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:visibility="visible"
                android:src="@drawable/ic_drawer"
                android:background="@drawable/ripple_20dp"
                android:id="@+id/action_menu_drawer"
                app:tint="?colorOnSurface"/>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_toStartOf="@id/action_menu_file"
                android:padding="10.5dp"
                android:visibility="gone"
                android:src="@drawable/ic_save"
                android:background="@drawable/ripple_20dp"
                android:id="@+id/action_menu_save"
                app:tint="?colorOnSurface"/>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_toStartOf="@id/action_menu_edit"
                android:padding="10.5dp"
                android:visibility="visible"
                android:src="@drawable/ic_folder"
                android:background="@drawable/ripple_20dp"
                android:id="@+id/action_menu_file"
                app:tint="?colorOnSurface"/>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_toStartOf="@id/action_menu_search"
                android:padding="10.5dp"
                android:visibility="visible"
                android:src="@drawable/ic_edit"
                android:background="@drawable/ripple_20dp"
                android:id="@+id/action_menu_edit"
                app:tint="?colorOnSurface"/>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_toStartOf="@id/action_menu_tools"
                android:padding="10.5dp"
                android:visibility="gone"
                android:src="@drawable/ic_file_search"
                android:background="@drawable/ripple_20dp"
                android:id="@+id/action_menu_search"
                app:tint="?colorOnSurface"/>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_toStartOf="@id/action_menu_undo"
                android:padding="10.5dp"
                android:visibility="gone"
                android:src="@drawable/ic_tools"
                android:background="@drawable/ripple_20dp"
                android:id="@+id/action_menu_tools"
                app:tint="?colorOnSurface"/>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_toStartOf="@id/action_menu_redo"
                android:padding="10.5dp"
                android:visibility="visible"
                android:src="@drawable/ic_undo"
                android:tint="@{viewModel.canUndo ? @android:color/white : @color/colorIcon}"
                android:background="@drawable/ripple_20dp"
                android:id="@+id/action_menu_undo"
                android:clickable="@{viewModel.canUndo}"
                tools:ignore="UseAppTint"/>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_toStartOf="@id/action_menu_overflow"
                android:padding="10.5dp"
                android:visibility="visible"
                android:src="@drawable/ic_redo"
                android:tint="@{viewModel.canRedo ? @android:color/white : @color/colorIcon}"
                android:background="@drawable/ripple_20dp"
                android:id="@+id/action_menu_redo"
                android:clickable="@{viewModel.canRedo}"
                tools:ignore="UseAppTint"/>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:padding="10.5dp"
                android:visibility="visible"
                android:src="@drawable/ic_overflow"
                android:background="@drawable/ripple_20dp"
                android:id="@+id/action_menu_overflow"
                app:tint="?colorOnSurface"/>

        </RelativeLayout>

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:clipChildren="true"
            android:id="@+id/tab_document_layout"
            android:background="?colorSecondaryVariant"
            android:elevation="3.5dp"
            app:tabRippleColor="?colorControlHighlight"
            app:tabUnboundedRipple="false"
            app:tabGravity="start"
            app:tabMode="scrollable"/>

        <!-- endregion TOOLBAR -->

        <!-- region DOCUMENT -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:visibility="@{viewModel.stateNothingFound ? View.VISIBLE : View.GONE}"
                android:src="@drawable/ic_file_search"
                app:tint="@color/colorIcon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="56dp"
                android:visibility="@{viewModel.stateNothingFound ? View.VISIBLE : View.GONE}"
                android:textColor="@color/colorIcon"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="@string/message_no_open_files"/>

            <ProgressBar
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:visibility="@{viewModel.stateLoadingDocuments ? View.VISIBLE : View.GONE}"
                android:indeterminate="true"/>

            <com.lightteam.modpeide.ui.editor.customview.TextProcessor
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|start"
                android:visibility="@{(viewModel.stateLoadingDocuments || viewModel.stateNothingFound) ? View.INVISIBLE : View.VISIBLE}"
                android:textCursorDrawable="@drawable/caret"
                android:dropDownAnchor="@id/tab_document_layout"
                android:completionThreshold="2"
                android:popupBackground="?colorSurface"
                android:id="@+id/editor"/>

            <com.lightteam.modpeide.ui.editor.customview.TextScroller
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:id="@+id/scroller"
                app:thumbTint="?colorPrimary"/>

        </FrameLayout>

        <com.lightteam.modpeide.ui.editor.customview.ExtendedKeyboard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="?colorSecondaryVariant"
            android:elevation="2dp"
            android:id="@+id/extended_keyboard"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <!-- endregion DOCUMENT -->

    </LinearLayout>

</layout>