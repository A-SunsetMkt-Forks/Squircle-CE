<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.lightteam.modpeide.ui.explorer.viewmodel.ExplorerViewModel"/>
        <import type="android.view.View"/>

        <variable name="viewModel" type="ExplorerViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- region TOOLBAR -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?colorSurface"
            android:visibility="@{viewModel.hasPermission ? View.VISIBLE : View.GONE}"
            android:elevation="4dp">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="0dp"
                android:id="@+id/toolbar"
                android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
                app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
                app:title="@string/label_local_storage"
                tools:menu="@menu/menu_explorer_default"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_alignParentStart="true"
                    android:padding="6dp"
                    android:id="@+id/action_home"
                    android:src="@drawable/ic_home"
                    android:background="@drawable/ripple_16dp"
                    app:tint="?colorOnSurface"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@id/action_create"
                    android:layout_toEndOf="@id/action_home"
                    android:orientation="horizontal"
                    android:background="@null"
                    android:id="@+id/directory_recycler_view"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_tab_directory"
                    tools:itemCount="1"/>

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_alignParentEnd="true"
                    android:padding="6dp"
                    android:id="@+id/action_create"
                    android:src="@drawable/ic_plus"
                    android:background="@drawable/ripple_16dp"
                    app:tint="?colorOnSurface"/>

            </RelativeLayout>

        </LinearLayout>

        <!-- endregion TOOLBAR -->

        <!-- region DIRECTORY FRAGMENT -->

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/swipe_refresh"
            android:background="?android:colorBackground">

            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/nav_host"
                android:name="androidx.navigation.fragment.NavHostFragment"
                app:navGraph="@navigation/explorer_graph"
                app:defaultNavHost="true"
                tools:ignore="FragmentTagUsage"/>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- endregion DIRECTORY FRAGMENT -->

    </LinearLayout>

</layout>